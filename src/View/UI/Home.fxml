<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Controller.HomeController">

   <children>
      <GridPane prefHeight="538.0" prefWidth="1118.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="labelUser" text="Label" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <font>
                  <Font name="Calibri Bold" size="44.0" />
               </font></Label>
            <ButtonBar GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
              <buttons>
                  <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" text="Log out" />
                  <Button fx:id="myProfileBtn" mnemonicParsing="false" onAction="#getMyProfile" text="My Profile" />
                  <Button fx:id="equipmentsButton" mnemonicParsing="false" onAction="#getEquipments" text="Equipments" />
                  <Button fx:id="viewBookingButton" mnemonicParsing="false" onAction="#getBooking" text="Booking" />
                  <Button fx:id="launchersButton" mnemonicParsing="false" onAction="#getLaunchers" text="Launchers" />
                  <Button fx:id="myCompanyBtn" layoutX="63.0" layoutY="354.0" mnemonicParsing="false" onAction="#getCompany" text="My Company" />
                  <Button fx:id="companiesBtn" layoutX="63.0" layoutY="354.0" mnemonicParsing="false" onAction="#getCompanies" text="Companies" />
                  <Button fx:id="glidersBtn" mnemonicParsing="false" onAction="#getGliders" text="Gliders" />
                  <Button fx:id="usersBtn" layoutX="63.0" layoutY="354.0" mnemonicParsing="false" onAction="#getUsers" text="Users" />

              </buttons>
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </ButtonBar>
         </children>
      </GridPane>

   </children>
</AnchorPane>
