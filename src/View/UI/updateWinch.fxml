<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Controller.UpdateWinchUIController">
    <children>
        <GridPane layoutY="55.0" prefHeight="281.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <DatePicker fx:id="acquisitionDateField" promptText="Acquisition date" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <TextField fx:id="maxLaunchWeightField" promptText="Max launch weight" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets left="15.0" right="15.0" />
                    </GridPane.margin>
                </TextField>
                <DatePicker fx:id="renewalDateField" layoutX="351.0" layoutY="23.0" promptText="Renewal date" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <TextField fx:id="maxWeightField" layoutX="25.0" layoutY="23.0" promptText="Max weight" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets left="15.0" right="15.0" />
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="registrationField" layoutX="325.0" layoutY="42.0" promptText="Registration" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets left="15.0" right="15.0" />
                    </GridPane.margin>
                </TextField>
                <DatePicker fx:id="parachuteRenewalField" promptText="Parachute renewal" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <DatePicker fx:id="ropeRenewalField" promptText="Rope renewal" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
            </children>
        </GridPane>
        <Button fx:id="addButton" layoutX="266.0" layoutY="355.0" mnemonicParsing="false" onAction="#updateWinch" text="Update" />
        <Label layoutX="216.0" layoutY="14.0" text="Update Winch" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Label>
        <Button fx:id="backButton" layoutX="14.0" layoutY="355.0" mnemonicParsing="false" onAction="#back" text="Back" />
    </children>
</AnchorPane>
